@model IEnumerable<CinemaBranch>
@{
    ViewData["Title"] = "CinemaBranch";
}


<br />
<div class="container p-3">
    <div class="row pt-4 justify-content-center">
        <div class="col-6 text-center">
            <h2 class="text-primary">Manage Cinema Branch</h2>
        </div>
        <div class="col-6 text-center">
            <a asp-controller="CinemaBranch" asp-action="CreateCinemaBranch" class="btn btn-primary">Add New Cinema</a>
        </div>
        <br />
        <div id="PlaceHolderHere" class="text-center"></div> 

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Mall</th> 
                    <th class="text-center">City</th> 
                    <th class="text-center">State</th> 
                    <th class="text-center">Actions</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%" class="text-center">@obj.MallName</td> 
                        <td width="25%" class="text-center">@obj.City</td> 
                        <td width="25%" class="text-center">@obj.State</td>
                        <td width="25%" class="text-center"><a class="btn btn-primary" asp-area="" asp-controller="Movie" asp-action="BuyTicket" asp-route-id="@obj.Id">Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

