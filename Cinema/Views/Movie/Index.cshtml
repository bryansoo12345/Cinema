@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        <div class="col-6 text-end">
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addMovie" data-url="@Url.Action("Create")">Add New Movie</button>
@*            <a asp-controller="Movie" asp-action="Create" class="btn btn-primary"> 
                 Add New Movie
            </a>*@
        </div>
    </div>

     <br />
     <div id="PlaceHolderHere"></div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Cover Photo</th> <!-- New column for Cover Photo -->
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="25%">@obj.Description</td>
                    <td width="25%">@obj.Genre</td>
                    <td width="10%">
                        @if (obj.CoverPhoto != null && obj.CoverPhoto.Length > 0)
                        {
                            var imageBase64 = Convert.ToBase64String(obj.CoverPhoto);
                            <img src="data:image;base64,@imageBase64" alt="Cover Photo" class="img-thumbnail" />
                        }
                    </td>
                    <td width="15%">
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addMovie" data-url="@Url.Action("Edit")" data-id="@obj.Id">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
