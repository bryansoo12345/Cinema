<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="carouselMultiItemExample" class="carousel slide carousel-dark text-center" data-mdb-ride="carousel">
        <div class="carousel-inner py-4">
            @foreach (var movie in Model)
            {
                <div class="carousel-item @(movie == Model.First() ? "active" : "")">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="card">
                                    @if (movie.CoverPhoto != null && movie.CoverPhoto.Length > 0)
                                    {
                                        var imageBase64 = Convert.ToBase64String(movie.CoverPhoto);
                                        <img src="data:image;base64,@imageBase64" alt="Cover Photo" class="img-thumbnail" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@movie.Name</h5>
                                        <p class="card-text">
                                            Some quick example text to build on the card title and make up the bulk
                                            of the card's content.
                                        </p>
                                        @*<p class="card-text">@movie.Description</p>*@
                                        <a href="#!" class="btn btn-primary">Button</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Add more columns as needed for additional movies -->
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>