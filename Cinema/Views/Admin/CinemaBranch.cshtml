@model IEnumerable<CinemaBranch>
@{
    ViewData["Title"] = "CinemaBranch";
}


<br />

<div class="row pt-4 justify-content-center">
    <!-- Added justify-content-center class -->
    <div class="col-6 text-center">
        <!-- Added text-center class -->
        <h2 class="text-primary">Manage Cinema Branch</h2>
    </div>
    <div class="col-6 text-center">
        <!-- Added text-center class -->
        <a asp-controller="CinemaBranch" asp-action="CreateCinemaBranch" class="btn btn-primary">Add New Cinema</a>
    </div>
</div>

<br />
<div id="PlaceHolderHere" class="text-center"></div> <!-- Added text-center class -->

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">Mall</th> <!-- Added text-center class -->
            <th class="text-center">City</th> <!-- Added text-center class -->
            <th class="text-center">State</th> <!-- Added text-center class -->
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%" class="text-center">@obj.MallName</td> <!-- Added text-center class -->
                <td width="25%" class="text-center">@obj.City</td> <!-- Added text-center class -->
                <td width="25%" class="text-center">@obj.State</td> <!-- Added text-center class -->
            </tr>
        }
    </tbody>
</table>
