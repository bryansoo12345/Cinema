@using Cinema.Models
@model MovieHall.FilterHallModel
@{
    string title = ViewData["Title"] as string;
    string methodName = ViewBag.MethodName as string;
}
    <div class="modal fade" id="addMovie">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="addMoveLabel">@title</h5>
                <button type="button" class="close close-modal-btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                <form action="@methodName" name="Movie" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label asp-for="SelectedDate"></label>
                        <input asp-for="SelectedDate" type="date" class="form-control" />
                        <span asp-validation-for="SelectedDate" class="text-danger"></span>
                    </div>
                </form>
                </div>
                <div class="modal-footer">
                <button type="button" class="close btn btn-secondary close-modal-btn" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Filter</button>
                </div>
            </div>
        </div>
    </div>
