@using Cinema.Models
@model MovieHall
@{
    string title = ViewData["Title"] as string;
    string methodName = ViewBag.MethodName as string;
}
    <div class="modal fade" id="addMovie">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="addMoveLabel">@title</h5>
                <button type="button" class="close close-modal-btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                <form action="@methodName" id="@Model.Id" name="Movie" enctype="multipart/form-data" method="post">
                    @if (methodName == "EditMovieHall")
                    {
                        <input asp-for="Id" class="form-control" type="hidden"/>
                    }
                    <div class="form-group">
                        <label asp-for="SelHallCode"></label>
                        <input asp-for="SelHallCode" class="form-control" />
                        <span asp-validation-for="SelHallCode" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="NumberOfRows"></label>
                            <input asp-for="NumberOfRows" class="form-control" />
                            <span asp-validation-for="NumberOfRows" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                        <div class="mb-3">
                            <label asp-for="NumberOfSeats" class="form-label"></label>
                            <input asp-for="NumberOfSeats" class="form-control">
                            <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                        </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                <button type="button" class="close btn btn-secondary close-modal-btn" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
